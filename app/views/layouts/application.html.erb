<!DOCTYPE html>
<html>
  <head>
    <title>Trumbl</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>

    <div id="sidebar">
      <ul>
        <li class="category"><%= link_to 'Tumbl', root_path %></li>
        <li><%= link_to 'Posts', root_path%></li>
        <li><%= link_to 'About', about_path%></li>
       
         <p class="sing_in">User Login</p>

      </ul>

    </div>

    <div id="main_content">
      <div id="header">
        <% if current_page?(root_path) %>
            <p>Post Feed</p>
        <% elsif current_page?(about_path) %>
            <p>Litle More About It</p>
        <% else  %>
            <%= link_to "Back to Posts Feed", root_path %>
        <% end %>
        
        <div class="buttons">
          <button class="button"><%= link_to 'Make Post', new_post_path %></button>
          <button class="button">Log Out</button>
        </div>
      </div>

      <%flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert")%>
      <%end%>
      <%= yield %>
    </div>


  </body>
</html>
